<div class="timerecords">
<h1> Hours this week 
	<small> 
		
	</small>
</h1>
<div>
<%= form_tag nil, :method => :get, :class => 'navbar-form navbar-left' do %>
			<div class="form-group">
			<%=date_field_tag 'startdate', @beginning_of_last_week, :class => "form-control"%>
			<%=date_field_tag 'enddate', @end_of_last_week, :class => "form-control"%>
			</div>
			<button type="submit" class="btn btn-default">Submit</button>
<% end %>
</div>
<div class="table-responsive">


<table class="table table-hover">
  <tr>
    <th>Job Number</th>
    <th>Date</th>       
    <th>Time In</th>
    <th>Time Out</th>
    <th>Total</th>
  </tr>
  <%= render @timerecords %>
  <tr>
    <td></td> 
    <td></td>
    <td></td>
    <td></td>
    <td><%= @timerecords.to_a.sum(&:timeTotal)%> Hours</td>
 </tr>
 </table>
</div>
</div>   

</div>