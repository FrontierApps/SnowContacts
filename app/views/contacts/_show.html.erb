<div id='contact'>
	
  <h2><%=@contact.CompanyName %>

 <small>  
 <%= link_to edit_contact_path(@contact),  {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#myContactForm'} do  %>
  <span class="glyphicon glyphicon-pencil"></span>
  <%end%>
	<%= link_to contact_path(@contact),
              method: :delete,
              data: { confirm: 'Are you sure?' } do%>
  <span class="glyphicon glyphicon-remove"></span>
  <%end%>
  </small>
  </h2>

  <div class="row">
   
      <%= render @contact%>
      <h3> Additional Contacts </h3>
      <%= render @contact.people%>
      <h3> Additional Locations </h3>
      <%= render @contact.locations%>


 
  </div>
</div>   
